<% include ../partials/header.ejs%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit "<%= foundcampground.name%>" </h1>
        <div style="width: 30%; margin: 0 auto">
            <form action="/campGrounds/<%= foundcampground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= foundcampground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= foundcampground.image%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="description"><%= foundcampground.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Submit</button>
                </div>
            </form>
            <a href="/campGrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs%>