<% include ./partials/header.ejs%>
<div class="container">
	<header class="jumbotron">
		<h1>Welcome to YelpCamp</h1>
		<p>View our all hand-picked camps from all over the world</p>
		<a class="btn btn-primary" href="/campGrounds/new">add new campground</a>
	</header>
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% for(var i = 0; i < campgrounds.length; i++) { %>
		<li class="col-md-4 col-sm-6"style="list-style-type: none;" style="height: 100%">
			<div >
				<div class="thumbnail">
					<img src="<%= campgrounds[i].image %>">
					<div class="caption">
						<%= campgrounds[i].name %>
					</div>
					<a href="/campGrounds/<%= campgrounds[i]._id%>" class="btn btn-primary">More Info...</a>
				</div>
			</div>
		</li>
		<% } %>
	</div>
</div>
<% include ./partials/footer.ejs%>